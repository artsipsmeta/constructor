%tr
  %td= primitive.name
  %td= primitive.unit.name
  %td
    = simple_form_for primitive, html: { id: "primitive-#{primitive.id}" } do |f|
      %input.form-control.primitive-price{ value: primitive.price, name: 'primitive[price]', data: { id: primitive.id, price: primitive.price } }
  %td
    .btn-group
      %button{ data: {toggle: 'dropdown'}, ng: { class: "ctrl.dateClass('#{primitive.date.strftime("%Y-%m-%d")}')" } }
        = l(primitive.date, format: "%d %b, %Y")
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to 'Обновить дату', "#", class: 'update-price-link'

  %td
    = link_to edit_primitive_path(primitive), title: 'Редактировать', class: 'btn btn-warning' do
      %span.glyphicon.glyphicon-pencil
    = link_to primitive_path(primitive), method: :delete, title: 'Удалить', class: 'btn btn-danger', data: {confirm: 'Вы уверены?'} do
      %span.glyphicon.glyphicon-trash
