%tr
  %td= category.name
  %td
    = link_to edit_category_path(category), class: 'btn btn-warning', title: 'Редактировать' do
      %span.glyphicon.glyphicon-pencil
    = link_to category, method: :delete, class: 'btn btn-danger', title: 'Удалить', data: {confirm: "Are you sure?"} do
      %span.glyphicon.glyphicon-trash
