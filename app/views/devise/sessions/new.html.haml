#login-screen
  .container
    .jumbotron
      = image_tag 'full-logo.png', class: 'center-block'
      %h2.text-center Конструктор сметы
      %br
      %hr
      %p.text-center Вход
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
        .form-group
          .col-sm-offset-4.col-sm-4
            = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control', required: true
        .form-group
          .col-sm-offset-4.col-sm-4
            = f.password_field :password, autocomplete: "off", placeholder: 'Пароль', class: 'form-control', required: true
        .form-group
          = f.submit 'Войти', class: 'btn btn-primary btn-lg center-block'
